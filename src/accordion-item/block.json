{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "pixelalbatross/accordion-item",
  "title": "Accordion Item",
  "category": "layout",
  "parent": [
    "pixelalbatross/accordion"
  ],
  "icon": "editor-table",
  "description": "Display content in collapsible sections.",
  "keywords": [],
  "version": "0.1.0",
  "textdomain": "accordion-block",
  "attributes": {
    "title": {
      "type": "string",
      "default": ""
    },
    "isOpen": {
      "type": "boolean",
      "default": false
    }
  },
  "supports": {
    "html": false,
    "reusable": false,
    "className": true,
    "color": {
      "gradients": true,
      "link": true,
      "__experimentalDefaultControls": {
        "background": true,
        "text": true
      }
    },
    "spacing": {
      "padding": true,
      "margin": [
        "top",
        "bottom"
      ],
      "blockGap": true
    }
  },
  "example": {
    "attributes": {
      "title": "Accordion Header"
    }
  },
  "editorScript": "file:./index.js",
  "render": "file:./render.php"
}
